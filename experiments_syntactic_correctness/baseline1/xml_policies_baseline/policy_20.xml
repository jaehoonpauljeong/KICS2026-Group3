<?xml version="1.0" encoding="UTF-8" ?>
<i2nsf-cfi-policy
    xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
    <name>route_video_streaming_policy</name>
    <rules>
        <name>route_video_streaming</name>
        <condition>
            <firewall-condition>
                <destination>DMZ_Proxy_Server</destination>
            </firewall-condition>
            <application>
                <protocol>video_streaming</protocol>
            </application>
        </condition>
        <actions>
            <primary-action>
                <action>route</action>
            </primary-action>
        </actions>
    </rules>
</i2nsf-cfi-policy>
