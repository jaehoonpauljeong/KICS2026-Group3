<?xml version="1.0" encoding="UTF-8" ?>
<i2nsf-cfi-policy
    xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
    <name>monitor_outgoing_email_policy</name>
    <rules>
        <name>copy_email_traffic</name>
        <condition>
            <firewall-condition>
                <transport-layer-protocol>SMTP</transport-layer-protocol>
            </firewall-condition>
        </condition>
        <actions>
            <primary-action>
                <action>forward</action>
            </primary-action>
            <secondary-action>
                <log-action>copy_to_monitoring_system</log-action>
            </secondary-action>
        </actions>
    </rules>
</i2nsf-cfi-policy>
