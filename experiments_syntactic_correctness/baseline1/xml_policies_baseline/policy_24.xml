<?xml version="1.0" encoding="UTF-8" ?>
<i2nsf-cfi-policy
    xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
    <name>throttle_streaming_media_policy</name>
    <rules>
        <name>throttle_streaming</name>
        <condition>
            <firewall-condition>
                <source>streaming_media</source>
            </firewall-condition>
        </condition>
        <actions>
            <primary-action>
                <action>throttle</action>
                <limit>100000000</limit> <!-- 100 MB/s in bytes -->
            </primary-action>
        </actions>
    </rules>
</i2nsf-cfi-policy>
