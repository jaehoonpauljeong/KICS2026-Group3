<?xml version="1.0" encoding="UTF-8" ?>
<i2nsf-cfi-policy
    xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
    <name>mitigate_flood_attacks_policy</name>
    <rules>
        <name>mitigate_flood_attacks</name>
        <condition>
            <ddos>
                <rate-limit>
                    <packet-rate-threshold>10000</packet-rate-threshold>
                    <byte-rate-threshold>1000000</byte-rate-threshold>
                </rate-limit>
            </ddos>
            <firewall-condition>
                <destination>Company_Web_Server</destination>
            </firewall-condition>
        </condition>
        <actions>
            <primary-action>
                <action>drop</action>
            </primary-action>
        </actions>
    </rules>
</i2nsf-cfi-policy>
