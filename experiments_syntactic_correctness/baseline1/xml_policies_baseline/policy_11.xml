<?xml version="1.0" encoding="UTF-8" ?>
<i2nsf-cfi-policy
    xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
    <name>allow_trusted_devices_policy</name>
    <rules>
        <name>allow_trusted_traffic</name>
        <condition>
            <firewall-condition>
                <source>trusted_devices</source>
            </firewall-condition>
        </condition>
        <actions>
            <primary-action>
                <action>allow</action>
            </primary-action>
        </actions>
    </rules>
</i2nsf-cfi-policy>
