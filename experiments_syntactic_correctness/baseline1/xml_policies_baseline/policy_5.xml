<?xml version="1.0" encoding="UTF-8" ?>
<i2nsf-cfi-policy
    xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
    <name>block_sns_office_hours_policy</name>
    <rules>
        <name>block_sns_access</name>
        <event>
            <system-event>office_hours</system-event>
        </event>
        <condition>
            <url-category>
                <url-name>SNS</url-name>
            </url-category>
            <context>
                <time>
                    <period>
                        <start-time>09:00</start-time>
                        <end-time>17:00</end-time>
                    </period>
                    <day>Monday</day>
                    <day>Tuesday</day>
                    <day>Wednesday</day>
                    <day>Thursday</day>
                    <day>Friday</day>
                </time>
            </context>
        </condition>
        <actions>
            <primary-action>
                <action>drop</action>
            </primary-action>
        </actions>
    </rules>
</i2nsf-cfi-policy>
