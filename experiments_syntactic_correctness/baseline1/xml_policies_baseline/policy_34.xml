<?xml version="1.0" encoding="UTF-8" ?>
<i2nsf-cfi-policy
    xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
    <name>allow_employee_web_browsing_policy</name>
    <rules>
        <name>allow_web_browsing</name>
        <event>
            <system-event>web-browsing-triggered</system-event>
        </event>
        <condition>
            <firewall-condition>
                <source>Employee_Network</source>
            </firewall-condition>
            <url-category>
                <url-name>web_browsing</url-name>
            </url-category>
        </condition>
        <actions>
            <primary-action>
                <action>allow</action>
            </primary-action>
            <secondary-action>
                <log-action>log_web_browsing_event</log-action>
            </secondary-action>
        </actions>
    </rules>
</i2nsf-cfi-policy>
