<?xml version="1.0" encoding="UTF-8" ?>
<i2nsf-cfi-policy
    xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
    <name>reject_external_connections_policy</name>
    <rules>
        <name>reject_new_connections</name>
        <event>
            <system-event>core_network_interface_down</system-event>
        </event>
        <condition>
            <firewall>
                <source>external_network</source>
            </firewall>
        </condition>
        <actions>
            <primary-action>
                <action>reject</action>
            </primary-action>
        </actions>
    </rules>
</i2nsf-cfi-policy>
