<?xml version="1.0" encoding="UTF-8" ?>
<i2nsf-cfi-policy
    xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
    <name>detect_dns_settings_policy</name>
    <rules>
        <name>detect_unauthorized_dns_change</name>
        <event>
            <system-event>unauthorized_dns_change</system-event>
        </event>
        <condition>
            <firewall-condition>
                <source>Any</source>
                <destination>DNS_Server</destination>
            </firewall-condition>
        </condition>
        <actions>
            <primary-action>
                <action>reject</action>
            </primary-action>
        </actions>
    </rules>
</i2nsf-cfi-policy>
