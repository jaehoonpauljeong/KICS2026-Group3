<?xml version="1.0" encoding="UTF-8" ?>
<i2nsf-cfi-policy
    xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
    <name>drop_malicious_ip_policy</name>
    <rules>
        <name>drop_malicious_traffic</name>
        <condition>
            <firewall-condition>
                <source>malicious_ip_addresses</source>
            </firewall-condition>
        </condition>
        <actions>
            <primary-action>
                <action>drop</action>
                <limit>0</limit>
            </primary-action>
        </actions>
    </rules>
</i2nsf-cfi-policy>
