<?xml version="1.0" encoding="UTF-8" ?>
<i2nsf-cfi-policy
    xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
    <name>translate_http_to_coap_policy</name>
    <rules>
        <name>translate_http_request</name>
        <event>
            <system-event>incoming-http-request</system-event>
        </event>
        <condition>
            <application>
                <protocol>http</protocol>
            </application>
            <users>
                <user>
                    <id>1</id>
                    <name>IoT_Sensors</name>
                </user>
            </users>
        </condition>
        <actions>
            <primary-action>
                <action>translate</action>
                <limit>1000</limit>
            </primary-action>
            <secondary-action>
                <log-action>log-translation</log-action>
            </secondary-action>
        </actions>
    </rules>
</i2nsf-cfi-policy>
