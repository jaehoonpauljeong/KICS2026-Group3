<?xml version="1.0" encoding="UTF-8" ?>
<i2nsf-cfi-policy
    xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
    <name>monitor_login_attempts_policy</name>
    <rules>
        <name>monitor_login_attempts</name>
        <event>
            <system-event>login-attempt</system-event>
        </event>
        <condition>
            <firewall-condition>
                <source>*</source>
            </firewall-condition>
        </condition>
        <actions>
            <primary-action>
                <action>permit</action>
            </primary-action>
            <secondary-action>
                <log-action>log-login-attempt</log-action>
            </secondary-action>
        </actions>
    </rules>
</i2nsf-cfi-policy>
