<?xml version="1.0" encoding="UTF-8" ?>
<i2nsf-cfi-policy
    xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
    <name>drop_non_management_traffic_on_high_memory_usage_policy</name>
    <rules>
        <name>high_memory_usage_rule</name>
        <event>
            <system-event>configuration-change</system-event>
        </event>
        <condition>
            <firewall>
                <source>all</source>
                <destination>non-management</destination>
            </firewall>
            <context>
                <time>
                    <start-date-time>critical</start-date-time>
                </time>
            </context>
        </condition>
        <actions>
            <primary-action>
                <action>drop</action>
            </primary-action>
        </actions>
    </rules>
</i2nsf-cfi-policy>
