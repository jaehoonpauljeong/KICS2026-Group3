<?xml version="1.0" encoding="UTF-8" ?>
<i2nsf-cfi-policy
    xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
    <name>drop_ssh_connections_policy</name>
    <rules>
        <name>drop_ssh_connections</name>
        <event>
            <system-event>incoming_ssh_connection</system-event>
        </event>
        <condition>
            <firewall-condition>
                <source>guest_network</source>
                <transport-layer-protocol>tcp</transport-layer-protocol>
                <range-port-number>
                    <start>22</start>
                    <end>22</end>
                </range-port-number>
            </firewall-condition>
        </condition>
        <actions>
            <primary-action>
                <action>drop</action>
            </primary-action>
            <secondary-action>
                <log-action>log_attempt</log-action>
            </secondary-action>
        </actions>
    </rules>
</i2nsf-cfi-policy>
