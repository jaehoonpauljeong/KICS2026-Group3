<?xml version="1.0" encoding="UTF-8" ?>
<i2nsf-cfi-policy
    xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
    <name>log_firewall_changes_policy</name>
    <rules>
        <name>log_config_change</name>
        <event>
            <system-event>configuration_change</system-event>
        </event>
        <condition>
            <firewall>
                <source>*</source>
                <destination>*</destination>
            </firewall>
        </condition>
        <actions>
            <primary-action>
                <action>allow</action>
            </primary-action>
            <secondary-action>
                <log-action>log_attempt</log-action>
            </secondary-action>
        </actions>
    </rules>
</i2nsf-cfi-policy>
