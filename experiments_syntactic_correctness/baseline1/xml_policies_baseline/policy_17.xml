<?xml version="1.0" encoding="UTF-8" ?>
<i2nsf-cfi-policy
    xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
    <name>mirror_suspicious_db_traffic_policy</name>
    <rules>
        <name>mirror_db_traffic</name>
        <condition>
            <firewall-condition>
                <source>Suspicious_Database_Traffic</source>
            </firewall-condition>
        </condition>
        <actions>
            <primary-action>
                <action>mirror</action>
                <limit>analysis_server</limit>
            </primary-action>
            <secondary-action>
                <action>allow</action>
            </secondary-action>
        </actions>
    </rules>
</i2nsf-cfi-policy>
