<?xml version="1.0" encoding="UTF-8" ?>
<i2nsf-cfi-policy
    xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
    <name>reject_unauthorized_login_policy</name>
    <rules>
        <name>reject_unauthorized_login</name>
        <event>
            <system-event>unauthorized-login-attempt</system-event>
        </event>
        <condition>
            <firewall-condition>
                <source>any</source>
            </firewall-condition>
        </condition>
        <actions>
            <primary-action>
                <action>reject</action>
            </primary-action>
            <secondary-action>
                <log-action>send-error-notification</log-action>
            </secondary-action>
        </actions>
    </rules>
</i2nsf-cfi-policy>
