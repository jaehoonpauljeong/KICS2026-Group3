<?xml version="1.0" encoding="UTF-8" ?>
<i2nsf-cfi-policy
    xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
    <name>restrict_backup_data_transfer_policy</name>
    <rules>
        <name>restrict_backup_data_transfer</name>
        <condition>
            <firewall-condition>
                <transport-layer-protocol>tcp</transport-layer-protocol>
            </firewall-condition>
            <time>
                <period>
                    <start-time>09:00</start-time>
                    <end-time>17:00</end-time>
                </period>
            </time>
        </condition>
        <actions>
            <primary-action>
                <action>rate-limit</action>
                <limit>10</limit>
            </primary-action>
        </actions>
    </rules>
</i2nsf-cfi-policy>
