<?xml version="1.0" encoding="UTF-8" ?>
<i2nsf-cfi-policy
    xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
    <name>block_games_nights_weekdays_policy</name>
    <rules>
        <name>block_games</name>
        <condition>
            <time>
                <period>
                    <start-time>22:00</start-time>
                    <end-time>06:00</end-time>
                </period>
                <day>Monday</day>
                <day>Tuesday</day>
                <day>Wednesday</day>
                <day>Thursday</day>
                <day>Friday</day>
            </time>
            <application>
                <protocol>games</protocol>
            </application>
        </condition>
        <actions>
            <primary-action>
                <action>drop</action>
            </primary-action>
        </actions>
    </rules>
</i2nsf-cfi-policy>
