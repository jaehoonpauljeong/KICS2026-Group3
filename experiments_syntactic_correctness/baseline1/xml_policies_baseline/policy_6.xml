<?xml version="1.0" encoding="UTF-8" ?>
<i2nsf-cfi-policy
    xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
    <name>block_social_media_policy</name>
    <rules>
        <name>block_social_media</name>
        <condition>
            <firewall-condition>
                <source>
                    <ipv4>
                        <range-ipv4-address>
                            <start>128.0.0.0</start>
                            <end>128.0.0.255</end>
                        </range-ipv4-address>
                    </ipv4>
                </source>
            </firewall-condition>
            <url-category>
                <url-name>Youtube</url-name>
                <url-name>X</url-name>
                <url-name>Instagram</url-name>
            </url-category>
            <context>
                <time>
                    <period>
                        <start-time>08:00</start-time>
                        <end-time>15:00</end-time>
                    </period>
                </time>
            </context>
        </condition>
        <actions>
            <primary-action>
                <action>drop</action>
            </primary-action>
        </actions>
    </rules>
</i2nsf-cfi-policy>
