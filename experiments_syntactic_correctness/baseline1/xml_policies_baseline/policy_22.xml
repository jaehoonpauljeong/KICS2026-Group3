<?xml version="1.0" encoding="UTF-8" ?>
<i2nsf-cfi-policy
    xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
    <name>secure_tunnel_policy</name>
    <rules>
        <name>encapsulate_financial_data</name>
        <condition>
            <firewall-condition>
                <source>Financial_Data_Client</source>
                <destination>Central_Server</destination>
            </firewall-condition>
        </condition>
        <actions>
            <primary-action>
                <action>encapsulate</action>
            </primary-action>
        </actions>
    </rules>
</i2nsf-cfi-policy>
