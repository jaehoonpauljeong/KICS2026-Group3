<?xml version="1.0" encoding="UTF-8" ?>
<i2nsf-cfi-policy
    xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
    <name>permit_finance_db_traffic_policy</name>
    <rules>
        <name>permit_db_traffic</name>
        <condition>
            <firewall-condition>
                <source>Finance_Department</source>
                <destination>Database_Servers</destination>
            </firewall-condition>
        </condition>
        <actions>
            <primary-action>
                <action>permit</action>
            </primary-action>
            <secondary-action>
                <log-action>log_session_information</log-action>
            </secondary-action>
        </actions>
    </rules>
</i2nsf-cfi-policy>
