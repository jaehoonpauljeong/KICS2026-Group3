<?xml version="1.0" encoding="UTF-8" ?>
<i2nsf-cfi-policy
    xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
    <name>alert_port_scan_policy</name>
    <rules>
        <name>port_scan_alert</name>
        <event>
            <system-event>port-scan-detection</system-event>
        </event>
        <condition>
            <firewall>
                <transport-layer-protocol>tcp</transport-layer-protocol>
                <range-port-number>
                    <start>1</start>
                    <end>65535</end>
                </range-port-number>
            </firewall>
        </condition>
        <actions>
            <primary-action>
                <action>allow</action>
            </primary-action>
            <secondary-action>
                <log-action>send-alert</log-action>
            </secondary-action>
        </actions>
    </rules>
</i2nsf-cfi-policy>
