<?xml version="1.0" encoding="UTF-8" ?>
<i2nsf-cfi-policy
    xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
    <name>limit_guest_bandwidth_policy</name>
    <rules>
        <name>limit_guest_bandwidth</name>
        <condition>
            <firewall-condition>
                <source>Guest_Network</source>
            </firewall-condition>
        </condition>
        <actions>
            <primary-action>
                <action>limit</action>
                <limit>1000</limit>
            </primary-action>
        </actions>
    </rules>
</i2nsf-cfi-policy>
