<?xml version="1.0" encoding="UTF-8"?>
<endpoint-groups xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
  <url-group>
    <name>blocked-games</name>
    <url>http://example.com/game1</url>
    <url>http://example.com/game2</url>
    <url>http://example.com/game3</url>
  </url-group>
  <user-group>
    <name>weekday-night-users</name>
    <range-ipv4-address>
      <start>192.168.1.1</start>
      <end>192.168.1.50</end>
    </range-ipv4-address>
  </user-group>
</endpoint-groups>

<i2nsf-cfi-policy xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
  <name>Block_Weekday_Night_Games</name>
  <rules>
    <name>Block_All_Games_Weekday_Nights</name>
    <condition>
      <firewall>
        <source>weekday-night-users</source>
      </firewall>
      <url-category>
        <url-name>blocked-games</url-name>
      </url-category>
      <context>
        <time>
          <period>
            <start-time>20:00:00Z</start-time>
            <end-time>23:59:59Z</end-time>
            <day>monday</day>
            <day>tuesday</day>
            <day>wednesday</day>
            <day>thursday</day>
            <day>friday</day>
          </period>
        </time>
      </context>
    </condition>
    <action>
      <primary-action>
        <action>drop</action>
      </primary-action>
    </action>
  </rules>
</i2nsf-cfi-policy>
