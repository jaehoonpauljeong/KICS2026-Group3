<?xml version="1.0" encoding="UTF-8"?>
<endpoint-groups xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
  <user-group>
    <name>sons-computers</name>
    <range-ipv4-address>
      <start>192.168.1.100</start>
      <end>192.168.1.150</end>
    </range-ipv4-address>
  </user-group>
  <url-group>
    <name>malicious-websites</name>
    <url>http://malicious-site1.com</url>
    <url>http://malicious-site2.com</url>
    <url>http://malicious-site3.com</url>
  </url-group>
</endpoint-groups>
<i2nsf-cfi-policy xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
  <name>Block_Malicious_Websites_For_Sons_Computer</name>
  <language>en-US</language>
  <priority-usage>priority-by-order</priority-usage>
  <resolution-strategy>fmr</resolution-strategy>
  <rules>
    <name>Block_Access_To_Malicious_Websites</name>
    <condition>
      <firewall>
        <source>sons-computers</source>
      </firewall>
      <url-category>
        <url-name>malicious-websites</url-name>
      </url-category>
    </condition>
    <action>
      <primary-action>
        <action>drop</action>
      </primary-action>
    </action>
  </rules>
</i2nsf-cfi-policy>
