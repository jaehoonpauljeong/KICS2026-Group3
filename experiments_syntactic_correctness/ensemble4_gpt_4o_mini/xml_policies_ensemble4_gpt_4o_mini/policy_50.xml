<?xml version="1.0" encoding="UTF-8"?>
<endpoint-groups xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
  <voice-group>
    <name>blacklist_sip</name>
    <sip-id>sip:1001@corp.com</sip-id>
    <sip-id>sip:1002@corp.com</sip-id>
    <sip-id>sip:1003@corp.com</sip-id>
  </voice-group>
  <device-group>
    <name>analysis-server</name>
    <range-ipv4-address>
      <start>192.0.2.1</start>
      <end>192.0.2.50</end>
    </range-ipv4-address>
  </device-group>
</endpoint-groups>

<i2nsf-cfi-policy xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
  <name>Voice_Group_Blacklist_Policy</name>
  <rules>
    <name>Reject_Calls_And_Mirror_Media</name>
    <condition>
      <firewall>
        <source>blacklist_sip</source>
        <destination>analysis-server</destination>
      </firewall>
    </condition>
    <action>
      <primary-action>
        <action>reject</action>
      </primary-action>
      <primary-action>
        <action>mirror</action>
      </primary-action>
    </action>
  </rules>
</i2nsf-cfi-policy>
