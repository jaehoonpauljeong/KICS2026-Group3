<?xml version="1.0" encoding="UTF-8"?>
<endpoint-groups xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
  <device-group>
    <name>firewall</name>
    <ipv4-prefix>192.168.1.0/24</ipv4-prefix>
    <range-ipv4-address>
      <start>192.168.1.1</start>
      <end>192.168.1.50</end>
    </range-ipv4-address>
  </device-group>
</endpoint-groups>

<i2nsf-cfi-policy xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
  <name>Firewall_Memory_Usage_Management</name>
  <rules>
    <name>Review_On_Critical_Memory_Usage</name>
    <condition>
      <firewall>
        <source>firewall</source>
      </firewall>
      <context>
        <time>
          <start-date-time>2025-09-01T08:00:00Z</start-date-time>
          <end-date-time>2025-09-01T18:00:00Z</end-date-time>
        </time>
      </context>
    </condition>
    <action>
      <primary-action>
        <action>invoke-signaling</action>
      </primary-action>
      <secondary-action>
        <action>review</action>
      </secondary-action>
    </action>
  </rules>
</i2nsf-cfi-policy>
