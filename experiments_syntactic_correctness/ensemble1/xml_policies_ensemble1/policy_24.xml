<?xml version="1.0" encoding="UTF-8"?>
<endpoint-groups xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
  <device-group>
    <name>streaming-media-devices</name>
    <ipv4-prefix>192.168.1.0/24</ipv4-prefix>
    <range-ipv4-address>
      <start>192.168.1.1</start>
      <end>192.168.1.50</end>
    </range-ipv4-address>
  </device-group>
</endpoint-groups>

<i2nsf-cfi-policy xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
  <name>Throttle_Streaming_Media_Traffic</name>
  <rules>
    <name>Limit_Streaming_Traffic</name>
    <condition>
      <firewall>
        <source>streaming-media-devices</source>
      </firewall>
      <traffic-flows>
        <byte-rate-threshold>100000000</byte-rate-threshold> <!-- 100 MB/s -->
      </traffic-flows>
    </condition>
    <action>
      <primary-action>
        <action>rate-limit</action>
        <limit>100000000</limit> <!-- 100 MB/s -->
      </primary-action>
    </action>
  </rules>
</i2nsf-cfi-policy>
