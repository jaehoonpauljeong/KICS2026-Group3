<?xml version="1.0" encoding="UTF-8"?>
<policy xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
  <endpoint-groups>
    <!-- No endpoint groups defined in the policy -->
  </endpoint-groups>
  <threat-prevention>
    <!-- No threat feeds defined in the policy -->
  </threat-prevention>
  <i2nsf-cfi-policy>
    <name>Guest_Network_Bandwidth_Limitation</name>
    <language>en-US</language>
    <priority-usage>priority-by-order</priority-usage>
    <resolution-strategy>fmr</resolution-strategy>
    <rules>
      <name>Limit_Guest_Network_Bandwidth</name>
      <condition>
        <firewall>
          <source>guest-network</source> <!-- Placeholder for the endpoint group -->
        </firewall>
      </condition>
      <action>
        <primary-action>
          <action>rate-limit</action>
          <limit>1000</limit> <!-- Limit set to 1000 packets per second -->
        </primary-action>
      </action>
    </rules>
  </i2nsf-cfi-policy>
</policy>
