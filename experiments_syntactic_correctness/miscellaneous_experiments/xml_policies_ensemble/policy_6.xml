<?xml version="1.0" encoding="UTF-8"?>
<endpoint-groups xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
  <url-group>
    <name>youtube</name>
    <url>https://www.youtube.com</url>
  </url-group>
</endpoint-groups>

<i2nsf-cfi-policy     
    xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface"
    xmlns:nsfcfi="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cfi-policy">
  <name>Block_Access_To_Youtube</name>
  <language>en-US</language>
  <priority-usage>priority-by-order</priority-usage>
  <resolution-strategy>fmr</resolution-strategy>
  <rules>
    <name>Block_Youtube_Access</name>
    <condition>
      <firewall>
        <source>unknown-source</source> <!-- Placeholder for source group -->
        <destination>youtube</destination>
      </firewall>
      <context>
        <application>
          <protocol>nsfcfi:http</protocol>
          <protocol>nsfcfi:https</protocol>
        </application>
      </context>
    </condition>
    <action>
      <primary-action>
        <action>drop</action>
      </primary-action>
    </action>
  </rules>
</i2nsf-cfi-policy>
