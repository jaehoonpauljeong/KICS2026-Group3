<?xml version="1.0" encoding="UTF-8"?>
<endpoint-groups xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
  <user-group>
    <name>file-transfer-users</name>
    <range-ipv4-address>
      <start>192.168.1.1</start>
      <end>192.168.1.50</end>
    </range-ipv4-address>
  </user-group>
</endpoint-groups>

<threat-prevention xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
  <name>ransomware-detection-feed</name>
  <ioc>hash:abcd1234</ioc>
  <format>stix</format>
</threat-prevention>

<i2nsf-cfi-policy xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
  <name>AntiVirus_Ransomware_Detection_Policy</name>
  <rules>
    <name>Investigate_And_Mitigate_File_Transfer_Threat</name>
    <condition>
      <anti-virus>
        <profile>ransomware-detect</profile>
      </anti-virus>
      <firewall>
        <source>file-transfer-users</source>
      </firewall>
      <context>
        <action-required>take appropriate action</action-required>
        <nature-of-threat>investigate and mitigate</nature-of-threat>
      </context>
    </condition>
    <action>
      <primary-action>
        <action>invoke-signaling</action>
      </primary-action>
      <secondary-action>
        <log-action>mitigate</log-action>
      </secondary-action>
    </action>
  </rules>
</i2nsf-cfi-policy>
