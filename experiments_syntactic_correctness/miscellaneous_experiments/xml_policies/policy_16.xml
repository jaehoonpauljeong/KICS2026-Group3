<?xml version="1.0" encoding="UTF-8"?>
<endpoint-groups xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
  <user-group>
    <name>disallowed-ports-group</name>
    <ipv4-prefix>192.0.2.0/24</ipv4-prefix>
    <range-ipv4-address>
      <start>192.0.2.1</start>
      <end>192.0.2.50</end>
    </range-ipv4-address>
  </user-group>
</endpoint-groups>

<i2nsf-cfi-policy xmlns="urn:ietf:params:xml:ns:yang:ietf-i2nsf-cons-facing-interface">
  <name>Disallowed_Ports_Traffic_Refusal</name>
  <rules>
    <name>Actively_Refuse_Disallowed_Ports</name>
    <condition>
      <firewall>
        <source>disallowed-ports-group</source>
        <range-port-number>
          <start>1</start>
          <end>1023</end>
        </range-port-number>
      </firewall>
    </condition>
    <action>
      <primary-action>
        <action>drop</action>
      </primary-action>
    </action>
  </rules>
</i2nsf-cfi-policy>
